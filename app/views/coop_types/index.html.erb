<%= content_tag :h1, "List of Coop Types" %>


<div class="text-end mb-3">
  <%= link_to new_coop_type_path, class: 'btn btn-primary' do %>
    New Coop Type
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @coop_types.each do |coop_type| %>
        <tr>

        <td><%= coop_type.id %></td>
        <td><%= coop_type.name %></td>
    
          <td>
            <%= link_to 'View', coop_type, class: 'btn' %>
            <%= link_to 'Edit', edit_coop_type_path(coop_type), class: 'btn' %>
            <%= link_to 'Delete', coop_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
