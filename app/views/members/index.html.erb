<%= content_tag :h1, "List of Members" %>


<div class="text-end mb-3">
  <%= link_to new_member_path, class: 'btn btn-primary' do %>
    New Member
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Gender</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>

        <td><%= member.id %></td>
        <td>
          <%= member %>
          <br>
          <% member.cooperatives.each do |coop| %>
            <%= link_to coop do %>
              <%= content_tag :span, coop.name, class: "badge bg-info text-dark" %>
            <% end %>
          <% end %>
        </td>
        <td><%= member.birth_date %></td>
        <td><%= member.gender %></td>
    
          <td>
            <%= link_to 'View', member, class: 'btn' %>
            <%= link_to 'Edit', edit_member_path(member), class: 'btn' %>
            <%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
