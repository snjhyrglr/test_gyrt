<%= content_tag :h1, "List of Employees" %>


<div class="text-end mb-3">
  <%= link_to new_employee_path, class: 'btn btn-primary' do %>
    New Employee
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Suffix</th>
        <th>Birthdate</th>
        <th>Username</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>

        <td><%= employee.id %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.middle_name %></td>
        <td><%= employee.suffix %></td>
        <td><%= employee.birthdate %></td>
        <td><%= employee.username %></td>
    
          <td>
            <%= link_to 'View', employee, class: 'btn' %>
            <%= link_to 'Edit', edit_employee_path(employee), class: 'btn' %>
            <%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
