<%= content_tag :h1, "List of Proposal Remarks" %>


<div class="text-end mb-3">
  <%= link_to "New", new_proposal_remark_path, class: "btn btn-primary", data: { turbo_frame: 'remote_modal' } %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Gyrt Proposal</th>
        <th>Remark</th>
        <th>Remark Type</th>
        <th>Status</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @proposal_remarks.each do |proposal_remark| %>
        <tr>

        <td><%= proposal_remark.id %></td>
        <td><%= proposal_remark.gyrt_proposal %></td>
        <td><%= proposal_remark.remark %></td>
        <td><%= proposal_remark.remark_type %></td>
        <td><%= proposal_remark.status %></td>
    
          <td>
            <%= link_to 'View', proposal_remark, class: 'btn' %>
            <%= link_to 'Edit', edit_proposal_remark_path(proposal_remark), class: 'btn', data: { turbo_frame: "remote_modal" } %>
            <%= link_to 'Delete', proposal_remark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
