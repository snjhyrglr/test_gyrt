<%= content_tag :h1, "List of Geo Provinces" %>


<div class="text-end mb-3">
  <%= link_to new_geo_province_path, class: 'btn btn-primary' do %>
    New Geo Province
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Geo Region</th>
        <th>Name</th>
        <th>Psgc Code</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @geo_provinces.each do |geo_province| %>
        <tr>

        <td><%= geo_province.id %></td>
        <td><%= geo_province.geo_region %></td>
        <td><%= geo_province.name %></td>
        <td><%= geo_province.psgc_code %></td>
    
          <td>
            <%= link_to 'View', geo_province, class: 'btn' %>
            <%= link_to 'Edit', edit_geo_province_path(geo_province), class: 'btn' %>
            <%= link_to 'Delete', geo_province, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
