<%= content_tag :h1, "List of Departments" %>


<div class="text-end mb-3">
  <%= link_to new_department_path, class: 'btn btn-primary' do %>
    New Department
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Division</th>
        <th>Name</th>
        <th>Shortname</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>

        <td><%= department.id %></td>
        <td><%= department.division.name %></td>
        <td><%= department.name %></td>
        <td><%= department.shortname %></td>
    
          <td>
            <%= link_to 'View', department, class: 'btn' %>
            <%= link_to 'Edit', edit_department_path(department), class: 'btn' %>
            <%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
