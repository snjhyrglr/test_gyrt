<%= content_tag :h1, "List of Geo Regions" %>


<div class="text-end mb-3">
  <%= link_to new_geo_region_path, class: 'btn btn-primary' do %>
    New Geo Region
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Name</th>
        <th>Psgc Code</th>
        <th></th>

      </tr>
    </thead>

    <tbody>

      <% @geo_regions.each do |geo_region| %>
        <tr>

        <td><%= geo_region.id %></td>
        <td><%= geo_region.name %></td>
        <td><%= geo_region.psgc_code %></td>
    
          <td>
            <%= link_to 'View', geo_region, class: 'btn' %>
            <%= link_to 'Edit', edit_geo_region_path(geo_region), class: 'btn' %>
            <%= link_to 'Delete', geo_region, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
